<%= "#{@course.code} #{@course.name} (#{@course_instance.name}) - #{@exercise.name}" %>

<% unless @exercise.anonymous_graders %><%=t :Reviewer %>: <%= @grader.firstname %> <%= @grader.lastname %> (<%= @grader.email %>)
<% end -%>
<% unless @review.grade.blank? %><%=t :Grade %>: <%= @review.grade %>
<% end -%>

<% if @review.feedback -%>
<%= word_wrap(@review.feedback, :line_width => 76).html_safe %>
<% end -%>
