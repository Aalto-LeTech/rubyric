<%= "#{@course.full_name} (#{@course_instance.name}) - #{@exercise.name}" %>

<% if !@exercise.anonymous_graders && @grader %><%=t :Reviewer %>: <%= @grader.firstname %> <%= @grader.lastname %> (<%= @grader.email %>)
<% end -%>
<% if !@exercise.anonymous_graders && @editors && @editors.size > 0 %><%=t :Editor %>: <% @editors.each_with_index do |editor, i|%><%= editor.firstname %> <%= editor.lastname %> (<%= editor.email %>)<% if i < @editors.size - 1 %>, <% end %><% end %>
<% end -%>
<% unless @review.grade.blank? %><%=t :Grade %>: <%= @review.grade %><% unless @exercise.max_grade.blank? %> / <%= @exercise.max_grade %>
<% end %>
<% end -%>

<% if @review.feedback -%>
<%= word_wrap(@review.feedback || '', :line_width => 76).html_safe %>
<% end -%>
