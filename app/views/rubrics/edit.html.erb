<!-- rubric/edit.html.erb -->
<% content_for :javascript do %>
  <%= javascript_include_tag 'rubricEditor' %>
<% end %>

<style>
.ui-effects-transfer {
  border: 2px dotted gray;
}

.dropHover {
  background: #ff8;
  border: 1px solid red;
}
</style>

<div class="page-header">
  <h1><%= link_to @exercise.name, @exercise %> - Editing rubric</h1>
</div>



<div class="tabbable rubric-editor" id="rubric-editor" data-url="<%= exercise_rubric_url(@exercise.id) %>">
  <!-- Tabs -->
  <div class="row-fluid">
    <div class="span1">
      <button class="btn btn-success" data-bind="click: clickSaveRubric">Save</button>
    </div>
    <div class="span11">
      <ul id="tabs" class="nav nav-tabs">
        <li class="active">
          <a id="tab-settings-link" href="#tab-settings" data-toggle="tab"><i class="icon-wrench"></i> <strong>Settings</strong></a>
        </li>
        <!-- ko foreach: pages -->
          <li><a data-toggle='tab' data-bind="text: name, attr: { href: tabUrl, id: tabLinkId }"></a></li>
        <!-- /ko -->
        
        <li id="create-page-tab">
          <a href="#" class="" data-bind="click: clickCreatePage"><i class="icon-plus"></i> Create new page</a>
        </li>
      </ul>
    </div>
  </div>

  <div id="tab-contents" class="tab-content">
    <!-- Settings tab -->
    <div class="tab-pane active" id="tab-settings">
      <div class="row-fluid">
        <div class="span4 well">
          <h3>Grading</h3>
          <ul id="grading-mode" class="unstyled">
            <li><label><input type="radio" name="grading-mode" data-bind="checked: gradingMode" value="no" /> No grade</label></li>
            <li><label><input type="radio" name="grading-mode" data-bind="checked: gradingMode" value="average" /> Weighted average</label></li>
            <li><label><input type="radio" name="grading-mode" data-bind="checked: gradingMode" value="sum" /> Sum</label></li>
          </ul>
        </div>
        <div class="span4 well">
          <h3>Feedback categories</h3>
          <table>
            <tbody id="feedback-categories" data-bind="sortable: feedbackCategories">
              <tr class="category">
                <td class="category" data-bind="text: $data"></td>
                <td class="buttons-column">
                  <div class="buttons">
                    <i class="icon-pencil edit-button" title="Edit"></i>
                    <i class="icon-trash delete-button" title="Delete"></i>
                    <i class="icon-resize-vertical move-button" title="Drag to move"></i>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>

          <div id="create-category-button" class="btn btn-small" data-bind="click: clickCreateCategory"><i class="icon-plus"></i> Create category</div>
        </div>
        <div class="span4 well">
          <h3>Feedback email</h3>

          <p>Final comment <!--i data-help="final-comment-help" class="icon-question-sign help-hover"></i--></p>
          <textarea data-bind="value: finalComment"></textarea>
        </div>
      </div>
      <%= link_to @exercise do %><i class="icon-circle-arrow-left"></i> Back to <%= @exercise.name %><% end %>
    </div>
    
    <!-- Rubric page tab -->
    <!-- ko foreach: pages -->
      <div class="tab-pane page" data-bind="attr: { id: tabId }">
        <h2>
          <span class="title" data-bind="text: name"></span>
          <span class="buttons">
            <i class="icon-pencil edit-page-button" title="Edit title"></i>
            <i class="icon-trash delete-page-button" title="Delete page"></i>
          </span>
        </h2>

        <div class="rubric" data-bind="sortable: criteria">
          <div class="criterion">
            <!-- Heading -->
            <h3>
              <span class="title" data-bind="text: name"></span>
              <span class="buttons">
                <i class="icon-pencil edit-criterion-button" title="Edit criterion"></i>
                <i class="icon-trash delete-criterion-button" title="Delete criterion"></i>
                <i class="icon-resize-vertical move-criterion-button" title="Drag to move criterion"></i>
              </span>
            </h3>

            <div class="clear"></div>

            <!-- Phrases -->
            <div class="phrases">
              <table class="phrases" data-bind="sortable: phrases">
                <tbody>
                  <tr class="phrase">
                    <td class="phraseType">
                      <select class="phraseType">
                        <%= options_for_select(['Good', 'Bad', 'Neutral']) %>
                      </select>
                    </td>
                    <td class="phrase" data-bind="editable: content, type: 'textarea', placeholder: 'click to edit'"></td>
                    <td class="buttons-column">
                      <div class="buttons">
                        <i class="icon-pencil edit-phrase-button" title="Edit phrase"></i>
                        <i class="icon-trash delete-phrase-button" title="Delete phrase"></i>
                        <i class="icon-resize-vertical move-phrase-button" title="Drag to move phrase"></i>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>

              <!-- Create phrase -->
              <div class="btn create-phrase-button buttons" data-bind="click: clickCreatePhrase">
                <i class="icon-plus"></i> Create new phrase
              </div>
            </div>
          </div>
        </div>

        <!-- Create criterion -->
        <div class="btn create-criterion-button" data-bind="click: clickCreateCriterion">
          <i class="icon-plus"></i> Create new criterion
        </div>

        <div class="row-fluid">
          <div class="span4 grading well">
            <h2>Grading</h2>
            <table>
              <tbody class="grading" data-bind="sortable: grades">
                <tr>
                  <td data-bind="text: $data"></td>
                </tr>
              </tbody>
            </table>
            <p>
              <input type="textfield" />
              <button class="btn btn-small create-grade-button"><i class="icon-plus"></i> Add grade</button>
            </p>
          </div>
        </div>
      </div>
    <!-- /ko -->
    
  </div>
</div> <!-- /tabbable -->

<% content_for :help do %>
  <div id="final-comment-help" class="hide">
    Final comment is automatically added in the end of the feedback email.
  </div>
<% end %>
