<tr class="group" id="group<%= group.id %>">
  <td colspan="4">
    <!-- Students -->
    <%= (group.users.collect do |user| "#{h(user.name)} (#{h(user.studentnumber)})" end).join(', ') %>
  </td>
</tr>
<%
submission_counter = 0
group.submissions.each do |submission|
%>
  <tr class="submission" id="submission<%= submission.id %>">
    <td rowspan="<%= [submission.reviews.size,1].max %>">
      <!-- Submission -->
      <%= check_box 'submissions_checkboxes', submission.id, {:class => 'submission_check' + (submission_counter == 0 ? ' submission_check_latest' : '')} %>
      <span <%= submission.late?(@exercise) ? 'class="late"' : '' %>><%= submission.created_at %></span>
      (<%= link_to "#{submission.extension}", submission_path(submission.id) %>)
    </td>

    <!-- Reviews -->
    <% if submission.reviews.empty? %>
      <td>
        Not assigned
        <%= link_to 'Create review', review_submission_path(submission.id) %>
      </td>
      <td></td>
      <td></td>
      </tr>
    <% else
      i = 0
      submission.reviews.each do |review|
        if (i > 0) %>
          <tr class="submission">
        <% end; i += 1 %>
          <td>
            <%= check_box 'reviews_checkboxes', review.id, {:class => 'review_check ' + (review.status == 'finished' ? ' review_check_finished' : '')} %>
            <%= review.user.name %>

            <% if ['unfinished','finished','mailed'].include?(review.status) %>
              <%= link_to 'Edit review', edit_review_path(review.id), {:title => 'Edit review', :class => 'smallButton'} %>
            <% else %>
              <%= link_to 'Edit review', edit_review_path(review.id), {:title => 'Edit review', :class => 'smallButton'} %>
            <% end %>
          </td>
          <td><%= review.status %></td>
          <td class="grade"><%= review.grade %></td>
        </tr>
      <% end # each
      %>
    <% end # if
    %>
<% submission_counter += 1; end %>

<tr class="spacer"><td colspan="4"></td></tr>
