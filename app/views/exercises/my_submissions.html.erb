<% content_for :javascript do %>
  <%= javascript_include_tag 'bootstrap.js' %>
<% end %>

<div class="page-header">
  <h1><%= "#{@course.code} #{@course.name} (#{@course_instance.name}) - #{@exercise.name}" %></h1>
</div>

<% unless @assigned_groups.empty? %>
  <!-- Reviews -->
  <table class="assignments">
    <thead>
      <tr>
        <td>Submission</td>
        <td>Review</td>
        <td>Status</td>
        <td>Grade</td>
      </tr>
    </thead>
    <tbody id="submissions_table">
      <%= render :partial => 'assistant_group', :collection => @assigned_groups %>
    </tbody>
  </table>
  
<% else %>
  
  <% unless @available_groups.empty? %>
    <!-- Submissions -->
    <table>
      <% @available_groups.each do |group| %>
        <tr>
          <td colspan='2'>
            <%= group.users.collect {|user| user.name }.join(', ') %>
          </td>
        </tr>
        
        <% if group.submissions.empty? %>
          <tr>
            <td colspan='2'>No submissions</td>
          </tr>
        <% else %>
          <% group.submissions.each do |submission| %>
            <tr>
              <td><%=l submission.created_at, :format => :long %></td>
              <td>(<%= link_to "#{submission.extension}", submission %>)</td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </table>
  <% end %>

  <hr />

  <p><%= link_to 'New submission', submit_url(@exercise.id), :class => 'btn' %></p>

<% end %>
