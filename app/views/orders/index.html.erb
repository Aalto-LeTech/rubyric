<h2>Orders</h2>

<table>
  <thead>
    <tr>
      <th>Payment ID</th>
      <th>Amount($)</th>
      <th>Payment Status</th>
      <th>Time</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.payment_id %></td>
        <td><%= order.amount %></td>
        <td><%= order.state %></td>
        <td><%= order.created_at %></td>
        <td><%= order.description %></td>
        <td><%= link_to "Details", order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>