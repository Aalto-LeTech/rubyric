<div class="row">
  <div class="col-sm-12">

    <h2>Test mailer</h2>

    <%= form_tag test_mailer_admin_path, :class=>'form-inline' do %>
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
      </div>
      
      <div class="form-group">
        <%= text_field_tag :email, nil,:class => 'form-control col-sm-4' %>
      </div>
      
      <div class="form-group">
        <button type="submit" class="btn btn-default">Send</button>
      </div>
    <% end %>

  </div>
</div>
