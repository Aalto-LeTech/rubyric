<div class="well">
  <p class="hint"><%=t :sessions_traditional_hint %></p>

  <div class="sessions-login-box">
    <%= form_for @session, :as => :session, :url => session_path do |f| %>
      <table>
        <tr>
          <td style="text-align: right"><%= f.label :email, 'Email' %></td>
          <td><%= f.text_field :email, :class => 'span2' %></td>
        </tr>
        <tr>
          <td style="text-align: right"><%= f.label :studentnumber, t(:sessions_password_label) %></td>
          <td><%= f.password_field :password, :class => 'span2' %></td>
        </tr>
        <tr>
          <td style="text-align: right"><%= f.label :remember_me, t(:sessions_remember_label) %></td>
          <td><%= f.check_box :remember_me %></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= f.submit t(:sessions_login_button) %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>

  <!-- <p><%= link_to 'Sign up', new_user_path %></p> -->
</div>
